<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="de.xwic.appkit.core.model.entities.impl.Activity" table="ACTIVITY" lazy="true">
        <id name="id" type="int">
            <column name="ACTIVITY_ID" not-null="true"/>
            <generator class="native"/>
        </id>

		<version column="VERSION" name="version" type="long"/>

 		<property name="deleted">
 			<column name="DELETED" not-null="true"/>
 		</property>
        <property name="downloadVersion" type="long">
        	<column name="DOWNLOAD_VERSION"/>
        </property>
        <property name="serverEntityId" type="int">
        	<column name="SRVENTITY_ID" not-null="true"/>
        </property>
		<property name="createdAt" type="timestamp">
			<column name="CREATED_AT" />
		</property>
		<property name="changed" type="boolean">
			<column name="CHANGED" />
		</property>
		<property name="createdFrom">
			<column name="CREATED_FROM" length="50" />
		</property>
		<property name="lastModifiedFrom">
			<column name="LASTMODIFIED_FROM" length="50" />
		</property>
		<property name="lastModifiedAt" type="timestamp">
			<column name="LASTMODIFIED_AT" />
		</property>

		<!-- CUSTOM PROPERTIES -->
		<property name="title">
        	<column name="TITLE" length="50"/>
        </property>
        <property name="jobClass">
        	<column name="JOB_CLASS" length="200"/>
        </property>
        <property name="cronExpression">
        	<column name="CRON_EXPRESSION" length="50"/>
        </property>
        <property name="executionTime" type="long">
			<column name="EXECUTION_TIME" />
		</property>
		<property name="lastRun" type="timestamp">
			<column name="LAST_RUN" />
		</property>
		<property name="nextRun" type="timestamp">
			<column name="NEXT_RUN" />
		</property>
		<property name="lastExecutionMessage">
			<column name="LAST_EXECUTION_MESSAGE" length="1024"/>
		</property>
		<many-to-one name="status"
			class="de.xwic.appkit.core.model.entities.impl.PicklistEntry" column="STATUS" />
	</class>
</hibernate-mapping>
